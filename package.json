{
  "name": "ws-server-ftw",
  "version": "0.2.0",
  "description": "Mock websocket endpoints with a beautiful TUI",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ws-server": "./bin/ws-server"
  },
  "files": [
    "dist",
    "bin"
  ],
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "include": [
      "src/*"
    ]
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "test": "NODE_ENV=test mocha -r tsx 'test/**/*.test.ts'",
    "coverage": "npm run test && nyc report --reporter=text-lcov | coveralls",
    "coverage-html": "npm run test && nyc report --reporter=html",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abidibo/ws-server.git"
  },
  "keywords": [
    "websocket",
    "mock",
    "server"
  ],
  "author": "abidibo <abidibo@gmail.com> (https://www.abidibo.net)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/abidibo/ws-server/issues"
  },
  "homepage": "https://github.com/abidibo/ws-server#readme",
  "dependencies": {
    "argparse": "^2.0.1",
    "deepmerge": "^4.3.1",
    "ink": "^6.6.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.2.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/argparse": "^2.0.17",
    "@types/deepmerge": "^2.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/ws": "^8.18.1",
    "coveralls": "^3.1.1",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.6.0",
    "ink-testing-library": "^4.0.0",
    "mocha": "^11.7.5",
    "nyc": "^17.1.0",
    "proxyquire": "^2.1.3",
    "sinon": "^21.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
